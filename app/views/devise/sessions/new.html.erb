<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">

<div class="login_page">
  <h2 class="title is-3"><%= t('.sign_in') %></h2>
  <%= image_tag("kasagura-app_icon.jpg", alt: "APP-icon", style: "width: 25vw; height: auto;") %>

  <%= render "devise/shared/links" %><br>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'label' %>
      <div class="control">
        <%= f.email_field :email, class: 'input is-small', autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力してください。" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password, class: 'label' %>
      <div class="control">
        <%= f.password_field :password, class: 'input is-small', autocomplete: "current-password", placeholder: "パスワードを入力してください。" %>
      </div>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="control">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <%= f.submit t('.sign_in'), class: "button is-primary is-outlined is-rounded" %>

  <% end %>

  <div>
    <%= link_to 'ゲストログイン（一般）', users_general_guest_sign_in_path, class: "button is-small", method: :post %>
    <%= link_to 'ゲストログイン（管理者）', users_admin_guest_sign_in_path,  class: "button is-small", method: :post %><br>
  </div>
  
</div>