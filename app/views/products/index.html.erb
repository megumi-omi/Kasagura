<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>イメージ</th>
      <th>在庫数</th>
      <th>カテゴリー</th>
      <th>傘骨</th>
      <th>商品アラート数</th>
      <th>タグ</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <% if product.image.attached? %>
        <td><%= image_tag product.image.variant(resize: '200x200') %></td>
      <% else %>
      <p>no image</p>
      <% end %>
      <td><%= product.stock %></td>
      <td><%= product.category.name %></td>
      <td><%= product.frame.name %></td>
      <td><%= product.product_alert.quantity %></td>
      <% product.taggings.each do |tagging| %>
        <td><%= tagging.tag.name %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>